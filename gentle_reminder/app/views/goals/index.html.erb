<button type="button" class="btn btn-default"><%= link_to "Create a goal now!", new_user_goal_path %></button>
<h1 class ="heavy">Tracked Goals</h1>
<% @goals_array.each do |goal_hash| %>
<div class="container">
  <div class="table-responsive">
    <table class="table table-hover table-bordered">
      <thead>
        <tr>
        <th> Goal</th>
        <th> Completion Date</th>
        <th> Repo Name</th>
        <th> Commit Goal</th>
        <th> Current Commits</th>
        </tr>
      </thead>
      <tbody>
        <tr>
        <td><%= goal_hash[:goal_key].name %></td>
        <td> <%= goal_hash[:date] %></td>
        <td><%= goal_hash[:goal_key].repo%></td>
        <td><%= goal_hash[:goal_key].commitments %></td>
        <td><%= @weekly_commits%></td>
        </tr>
      </tbody>
    </table>
      <% end %>
  </div>
</div>
 

