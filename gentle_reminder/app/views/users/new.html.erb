<div class="sign_in">
	<div class="signin_title">
		<h1>Sign up now</h1>
		<h3>Its free and easy!</h3>
	</div>
		
			<div class = "hello">
			<%= form_for(@user) do |f| %>
				<%= render 'shared/error_messages' %>
				<%=f.label :name %>
				<br>
				<%=f.text_field :name%> 
				<br>
				<%=f.label :email %>
				<br>
				<%=f.text_field :email%>
				<br>
				<%=f.label :password %>
				<br>
				<%=f.password_field :password%> 
		
			<!-- make password_conf work -->
				<br>
				<%=f.label :password_confirmation %>
				<br>
				<%=f.password_field :password%>
				<br>
				<br>
				<%= f.submit "Create Account" %>
			</div>
</div> 



<%end%>